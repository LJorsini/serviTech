@{
    ViewData["Title"] = "Productos";
}


<div>
    <h3 class="h3">Productos</h3>
</div>

<!--Seccion Mostrar Cliente -->
<div class="container div-secciones">
    <ul class="collapsible">
        <li>
            <div class="collapsible-header"><i class="material-icons">person</i>Clientes</div>
            <div class="collapsible-body">

                <div class="row ">
                    <div class="input-field outlined col s6 offset-s6 ">
                        <i class="material-icons prefix">search</i>
                        <input type="text" id="autocomplete-input" class="autocomplete">
                        <label class="active" for="autocomplete-input">Buscar Cliente</label>
                    </div>
                </div>

                <table class="highlight">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>Telefono</th>
                            <th>Localidad</th>
                            
                        </tr>
                    </thead>
                    <tbody id="tabla-producto">
                        
                    </tbody>

                    
                </table>

                <div class="div-paginacion mt-3">
                    <ul class="pagination center-align">
                        <li class="disabled"><a href="#!"><i class="material-icons">chevron_left</i></a></li>
                        <li class="active teal lighten-1"><a href="#!">1</a></li>
                        <li class="waves-effect"><a href="#!">2</a></li>
                        <li class="waves-effect"><a href="#!">3</a></li>
                        <li class="waves-effect"><a href="#!">4</a></li>
                        <li class="waves-effect"><a href="#!">5</a></li>
                        <li class="waves-effect"><a href="#!"><i class="material-icons">chevron_right</i></a></li>
                    </ul>
                </div>
                
            </div>
        </li>
        <!--Seccion Cargar Cliente-->
        <li>
            <div class="collapsible-header"><i class="material-icons">person_add</i>Agregar Cliente</div>
            <div class="collapsible-body">
                <form class="col s12">
                    <div class="row">
                        <div class="col s6">
                            <input id="clienteId" type="hiden" value="0">
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s6">
                            <input id="nombre" type="text" class="validate" required>
                            <label for="nombre">Nombre</label>
                        </div>
                        <div class="input-field col s6">
                            <input id="apellido" type="text" class="validate" required>
                            <label for="apellido">Apellido</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12">
                            <input id="dni" type="text" maxlength="8" class="validate" required>
                            <label for="dni">DNI</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s6">
                            <input id="direccion" type="text" class="validate" required>
                            <label for="direccion">Direccion</label>
                        </div>
                       @*  <div class="input-field col s6">
                            @Html.DropDownList("LocalidadID", null, htmlAttributes: new { @class = "validate" })
                            <label for="LocalidadID">Localidad</label>
                        </div> *@
                    </div>

                    @* <div class="row">
                        <div class="input-field col s6">


                            @Html.DropDownList("ProvinciaID", null, htmlAttributes: new { @class = "form-control" })

                            <label for="ProvinciaID">Provincia</label>
                        </div>
                        <div class="input-field col s6">
                            <input id="last_name" type="text" class="validate">
                            <label for="last_name">CP</label>
                        </div>
                    </div> *@

                    <div class="row">
                        <div class="input-field col s6">
                            <input id="email" type="text" class="validate" required>
                            <label for="email">Email</label>
                        </div>
                        <div class="input-field col s6">
                            <input id="telefono" type="tel" class="validate" required>
                            <label for="telefono">Telefono</label>
                        </div>
                    </div>
                </form>
                <div class="right-align">
                    <button class="btn waves-effect waves-light" type="submit" name="action"
                        onclick="NuevoCliente()">Guardar
                        <i class="material-icons left">save</i>
                    </button>
                </div>

            </div>
        </li>

        <li>
            <div class="collapsible-header"><i class="material-icons">leaderboard</i>Gr√°ficos</div>
            <div class="collapsible-body">
                
                <div class="row ">
                    <div class="input-field outlined col s6  ">
                        <button class="btn waves-effect waves-light teal lighten-1" onclick="Imprimir()" type="submit"
                            name="action">
                            <i class="material-icons">print</i></button>
                        
                    </div>
                </div>
                <div class="row">
                    <div class="col s6">
                        <p>hola</p>
                        <canvas id="myChart"></canvas>
                    </div>
                </div>
            </div>
        </li>
    </ul>
</div>

