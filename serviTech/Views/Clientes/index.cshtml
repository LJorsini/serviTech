@{
    ViewData["Title"] = "Clientes";
}

<div>
    <h3 class="h3">CLIENTES</h3>
</div>


<div class="container div-secciones">
    <ul class="collapsible">
        <li>
            <div class="collapsible-header"><i class="material-icons">person</i>Clientes</div>
            <div class="collapsible-body">

                <div class="row ">
                    <div class="input-field outlined col s6 offset-s6 ">
                        <i class="material-icons prefix">search</i>
                        <input type="text" id="autocomplete-input" class="autocomplete">
                        <label class="active" for="autocomplete-input">Buscar Cliente</label>
                    </div>
                </div>

                <table>
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>DNI</th>
                            <th>Direccion</th>
                            <th>Localidad</th>
                            <th>Provincia</th>
                            <th>CP</th>
                            <th>Email</th>
                            <th>Telefono</th>
                        </tr>
                    </thead>

                    <tbody class="body-tabla">

                    </tbody>
                </table>
            </div>
        </li>

        <li>
            <div class="collapsible-header"><i class="material-icons">person_add</i>Agregar Cliente</div>
            <div class="collapsible-body">
                <form class="col s12">
                    <div class="row">
                        <div class="input-field col s6">
                            <input id="first_name" type="text" class="validate">
                            <label for="first_name">Nombre</label>
                        </div>
                        <div class="input-field col s6">
                            <input id="last_name" type="text" class="validate">
                            <label for="last_name">Apellido</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12">
                            <input id="email" type="email" class="validate">
                            <label for="email">DNI</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s6">
                            <input id="first_name" type="text" class="validate">
                            <label for="first_name">Direccion</label>
                        </div>
                        <div class="input-field col s6">
                            <input id="last_name" type="text" class="validate">
                            <label for="last_name">Localidad</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s6">
                            

                            @Html.DropDownList("provincias", null, htmlAttributes: new { @class = "form-control" })
                            
                            <label for="provincias">Provincia</label>
                        </div>
                        <div class="input-field col s6">
                            <input id="last_name" type="text" class="validate">
                            <label for="last_name">CP</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s6">
                            <input id="first_name" type="text" class="validate">
                            <label for="first_name">Email</label>
                        </div>
                        <div class="input-field col s6">
                            <input id="last_name" type="text" class="validate">
                            <label for="last_name">Telefono</label>
                        </div>
                    </div>
                </form>
                <div class="right-align">
                    <button class="btn waves-effect waves-light" type="submit" name="action" onclick="GuardarCliente()">Guardar
                        <i class="material-icons left">save</i></button>
                </div>

            </div>
        </li>

        <li>
            <div class="collapsible-header"><i class="material-icons">leaderboard</i>Gr√°ficos</div>
            <div class="collapsible-body">
                <div class="row ">
                    <div class="input-field outlined col s6  ">
                        <button class="btn waves-effect waves-light teal lighten-1" onclick="Imprimir()" type="submit" name="action">
                            <i class="material-icons">print</i></button>
                        @* <i class="material-icons prefix blue-text accent-1">print</i> *@
                    </div>
                </div>
                <div class="row">
                    <div class="col s6">
                        <p>hola</p>
                        <canvas id="myChart"></canvas>
                    </div>
                </div>
            </div>
        </li>
    </ul>
</div>



</script>
@section Scripts {
        <script src='~/js/graficos.js'></script>
        @* <script src='~/js/materialize.js'></script> *@
        @* <script src="https://cdn.jsdelivr.net/npm/chart.js"></script> *@
        
    }
