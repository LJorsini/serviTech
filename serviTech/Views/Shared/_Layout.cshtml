@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - serviTech</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/menu.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/serviTech.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>


<body>
    @if (SignInManager.IsSignedIn(User))
    {

        <section class="container section lateral-menu">

            <a href="#" data-target="menu-side" class="sidenav-trigger"><i class="material-icons">menu</i></a>

            <ul class="sidenav" id="menu-side">
                <li>
                    <div class="user-view">
                        <div class="background">
                            <img src="~/img/logo.jpg">
                        </div>
                        <a href="#user"><img class="circle" src="~/img/logo.jpg"></a>
                        <a href="#name"><span class="white-text name">Lucas Orsini</span></a>
                        <a href="#email"><span class="white-text email">@User.Identity?.Name</span></a>
                    </div>
                </li>

                <li><a href="#!"><i class="material-icons">cloud</i>First Link With Icon</a></li>

                <li>
                    <form class="" asp-area="Identity" asp-page="/Account/Logout"
                        asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button type="submit" class="btn waves-effect waves-light"><i
                                class="material-icons left">airplay</i>Salir</button>

                    </form>
                </li>
            </ul>
        </section>

        <div class="container section">
            <div class="row">
                <div class="col s4 m6">
                    <div class="card blue-grey darken-1">
                        <div class="card-content white-text">
                            <span class="card-title">Cargar cliente</span>
                            <p>I am a very simple card. I am good at containing small bits of information.
                                I am convenient because I require little markup to use effectively.</p>
                        </div>
                        <div class="card-action">
                            <button data-target="ModalCliente" class="btn modal-trigger">Cargar Cliente</button>
                        </div>
                    </div>
                </div>

                <div class="col s4 m6">
                    <div class="card blue-grey darken-1">
                        <div class="card-content white-text">
                            <span class="card-title">Orden de trabajo</span>
                            <p>I am a very simple card. I am good at containing small bits of information.
                                I am convenient because I require little markup to use effectively.</p>
                        </div>
                        <div class="card-action">
                            <a href="#" class="btn-small">Nueva ordden de trabajo</a>
                            <a href="#" class="btn-small">Ordenes de trabajo</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col s4 m6">
                    <div class="card blue-grey darken-1">
                        <div class="card-content white-text">
                            <span class="card-title">Orden de trabajo</span>
                            <p>I am a very simple card. I am good at containing small bits of information.
                                I am convenient because I require little markup to use effectively.</p>
                        </div>
                        <div class="card-action">
                            <a href="#" class="btn-small">Nueva ordden de trabajo</a>
                            <a href="#" class="btn-small">Ordenes de trabajo</a>

                        </div>
                    </div>
                </div>

                <div class="col s4 m6">
                    <div class="card blue-grey darken-1">
                        <div class="card-content white-text">
                            <span class="card-title">Orden de trabajo</span>
                            <p>I am a very simple card. I am good at containing small bits of information.
                                I am convenient because I require little markup to use effectively.</p>
                        </div>
                        <div class="card-action">
                            <a href="#" class="btn-small">Nueva ordden de trabajo</a>
                            <a href="#" class="btn-small">Ordenes de trabajo</a>

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal Structure -->
        <div id="ModalCliente" class="modal">
            <div class="modal-content">
                <h4>Modal Header</h4>
                <p>A bunch of text</p>
            </div>
            <div class="modal-footer">
                <a href="#!" class="modal-close waves-effect waves-green btn-flat">Agree</a>
            </div>
        </div>

        <div class="" id="wrapper">
            <div id="page-content-wrapper">
                <div class="">
                    <main role="main" class="main">
                        @RenderBody()
                    </main>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="container-fluid">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    }



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/menu.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
