@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - serviTech</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/menu.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/serviTech.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>


<body>
    @if (SignInManager.IsSignedIn(User))
    {

        <section class="container section lateral-menu">

            <a href="#" data-target="menu-side" class="sidenav-trigger"><i class="material-icons">menu</i></a>

            <ul class="sidenav" id="menu-side">
                <li>
                    <div class="user-view">
                        <div class="background">
                            <img src="~/img/logo.jpg">
                        </div>
                        <a href="#user"><img class="circle" src="~/img/logo.jpg"></a>
                        <a href="#name"><span class="white-text name">Lucas Orsini</span></a>
                        <a href="#email"><span class="white-text email">@User.Identity?.Name</span></a>
                    </div>
                </li>

                <li><a href="#!"><i class="material-icons">cloud</i>First Link With Icon</a></li>

                <li>
                    <form class="" asp-area="Identity" asp-page="/Account/Logout"
                        asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button type="submit" class="btn waves-effect waves-light"><i
                                class="material-icons left">airplay</i>Salir</button>

                    </form>
                </li>
            </ul>
        </section>

        <div class="container section">
            <div class="row">
                <div class="col s4 m6">
                    <div class="card blue-grey darken-1">
                        <div class="card-content white-text">
                            <span class="card-title">Clientes</span>
                            <p>Lugar donde se cargan y ven clientes</p>
                        </div>
                        <div class="card-action">
                            <button data-target="ModalCargarCliente" class="btn modal-trigger">Cargar Cliente</button>
                            <button data-target="ModalMostrarCliente" class="btn modal-trigger">Mostrar Cliente</button>
                        </div>
                    </div>
                </div>

                <div class="col s4 m6">
                    <div class="card blue-grey darken-1">
                        <div class="card-content white-text">
                            <span class="card-title">Orden de trabajo</span>
                            <p>Lugar donde se cargan y ven ordenes de trabajo</p>
                        </div>
                        <div class="card-action">
                            <button data-target="ModalCargarCliente" class="btn modal-trigger">Nueva orden de trabajo</button>
                            <button data-target="ModalCargarCliente" class="btn modal-trigger">Ordenes de trabajo</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col s4 m6">
                    <div class="card blue-grey darken-1">
                        <div class="card-content white-text">
                            <span class="card-title">Stock</span>
                            <p>Lugar donde se cargan y se consulta stock</p>
                        </div>
                        <div class="card-action">
                            <button data-target="ModalCargarCliente" class="btn modal-trigger">Cargar Stock</button>
                            <button data-target="ModalCargarCliente" class="btn modal-trigger">Mostrar Stock</button>

                        </div>
                    </div>
                </div>

                <div class="col s4 m6">
                    <div class="card blue-grey darken-1">
                        <div class="card-content white-text">
                            <span class="card-title">Presupuestos</span>
                            <p>Lugar donde se cargan y consultan presupuestos</p>
                        </div>
                        <div class="card-action">
                            <button data-target="ModalCargarCliente" class="btn modal-trigger">Nuevo Presupuesto</button>
                            <button data-target="ModalCargarCliente" class="btn modal-trigger">Ver Presupuesto</button>

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal Structure -->
        <div id="ModalCargarCliente" class="modal">
            <div class="modal-content">
                <h4>Modal Header</h4>
                <p>A bunch of text</p>
                <form action="">
                    <div class="row">
                        <form class="col s12">
                            <div class="row">
                                <div class="input-field col s6">
                                    <i class="material-icons prefix">account_circle</i>
                                    <input id="nombre" type="text" class="validate">
                                    <label for="nombre">Nombre</label>
                                </div>

                                <div class="input-field col s6">
                                    <i class="material-icons prefix">account_circle</i>
                                    <input id="apellido" type="text" class="validate">
                                    <label for="apellido">Apellido</label>
                                </div>
                            </div>

                            <div class="row">
                                <div class="input-field col s6">
                                    <i class="material-icons prefix">key_vertical</i>
                                    <input id="direccion" type="text" class="validate">
                                    <label for="direccion">Direccion</label>
                                </div>

                                <div class="input-field col s6">
                                    <i class="material-icons prefix">place</i>
                                    <input id="localidad" type="text" class="validate">
                                    <label for="localidad">Localidad</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s6">
                                    <i class="material-icons prefix">place</i>
                                    <input id="provincia" type="text" class="validate">
                                    <label for="provincia">Provincia</label>
                                </div>

                                <div class="input-field col s6">
                                    <i class="material-icons prefix">markunread_mailbox</i>
                                    <input id="cp" type="number" class="validate">
                                    <label for="cp">CP</label>
                                </div>
                            </div>

                            <div class="row">
                                <div class="input-field col s6">
                                    <i class="material-icons prefix">mail</i>
                                    <input id="email" type="text" class="validate">
                                    <label for="email">Email</label>
                                </div>

                                <div class="input-field col s6">
                                    <i class="material-icons prefix">phone</i>
                                    <input id="telefono" type="number" class="validate">
                                    <label for="telefono">Telefono</label>
                                </div>
                            </div>

                            <div class="input-field col s12">
                                <i class="material-icons prefix">badge</i>
                                <input id="dni" type="number" class="validate">
                                <label for="dni">DNI</label>
                            </div>

                        </form>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <a href="#!" class="modal-close waves-effect waves-green btn-flat">GURDAR</a>
            </div>
        </div>

        <!-- Modal Mostrar Cliente -->
        <div id="ModalMostrarCliente" class="modal">
            <div class="modal-content">
                <h4>Modal Header</h4>
                <p>A bunch of text</p>
            </div>
            <div class="modal-footer">
                <a href="#!" class="modal-close waves-effect waves-green btn-flat">Agree</a>
            </div>
        </div>

        <div class="" id="wrapper">
            <div id="page-content-wrapper">
                <div class="">
                    <main role="main" class="main">
                        @RenderBody()
                    </main>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="container-fluid">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    }



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/menu.js"></script>
    <script src="~/js/cliente.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
